<section class="features__content-bottom">
    <!-- IMAGE WRAPPER -->
    <div class="features__img-box-bottom parallax-wrapper">
        <div class="parallax-element">
            <picture 
            data-scroll 
            data-scroll-speed="-.85"
            class="features__img-bottom">
                <source media="(max-width: 600px)" srcset="https://images.ctfassets.net/35vb6ef1spkj/6CRfL0yWBtjfZvb4JzxALo/e471c5e463d759532ddee97a3d7394d9/S1_UA.jpg">
