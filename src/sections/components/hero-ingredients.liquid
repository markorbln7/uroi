<section class="hero {% if section.settings.floating-img %}hero--mb{% endif %}">
    <div class="hero__bg-image hero__bg-image--mob parallax-wrapper" >
        <img data-scroll data-scroll-speed="2" class="parallax-element" src="{{ section.settings.img-mob | img_url: 'master'}}" alt="">
    </div>
    <div class="hero__bg-image hero__bg-image--desk parallax-wrapper">
        <img data-scroll data-scroll-speed="2" class="parallax-element" src="{{ section.settings.img-desk | img_url: 'master'}}" alt="">
    </div>
    {% if section.settings.floating-img %} 
        <div class="hero__floating-img-wrapper parallax-wrapper">
            <img data-scroll data-scroll-speed="1" class="hero__floating-img parallax-element" src="{{  section.settings.floating-img | img_url: 'master'}}" alt="{{ section.settings.floating-img-alt }}">
        </div>
    {% endif %}
    <div class="hero__container">
        <div class="hero__content-wrapper {% if section.settings.dark-title %}hero__content-wrapper--dark-bottom{% endif %}">
            <h3 class="hero__subtitle">{{ section.settings.subtitle }}</h3>
            <h1 class="hero__title">{{ section.settings.title }} </h1>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Hero Ingredients",
    "settings": [
        {
            "id": "img-desk",
            "type": "image_picker",
            "label": "Background Image for Desktop"
        },
        {
            "id": "img-mob",
            "type": "image_picker",
            "label": "Background Image for Mobile"
        },
        {
            "id": "floating-img",
            "type": "image_picker",
            "label": "Floating Image"
        },
        {
            "id": "floating-img-alt",
            "type": "text",
            "label": "Floating Image Alt"
        },
        {
            "id": "title",
            "type": "text",
            "label": "Title",
            "default": "a blessing of water for every skin"
        },
        {
            "id": "subtitle",
            "type": "text",
            "label": "Subtitle",
            "default": "Itâ€™s Made In Japan"
        },   
        {
            "id": "dark-title",
            "type": "checkbox",
            "label": "Move Title to bottom"
        }
    ],
    "presets": [
        {
            "category": "Home Page",
            "name": "Hero Ingredients"
        }
    ]
}
{% endschema %}