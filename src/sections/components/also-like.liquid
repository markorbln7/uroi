{% schema %}
{
    "name": "AlsoLike",
    "settings": [
        {
            "id": "title-small",
            "type": "text",
            "label": "Title small",
            "default": "You May"
        },
        {
            "id": "title-big",
            "type": "text",
            "label": "Title big",
            "default": "Also Like"
        }
    ],
    "blocks": [
        {
            "name": "AlsoLikeProducts",
            "type": "also-like-products",
            "settings": [
                {
                    "id": "product",
                    "type": "product",
                    "label": "Select Product"
                },
                {
                    "id": "product-desc",
                    "type": "text",
                    "label": "Add text under product"
                }
            ]
        }
    ],
    "presets": [
        {
        "category": "Product",
        "name": "Also Like"
        }
    ]
}
{% endschema %}