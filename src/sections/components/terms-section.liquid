<section class="def-page">
    <div class="container-fluid">
        <div class="def-page__container">
            <aside class="def-page__aside">
                <ul class="def-page__list">
                    {% for block in section.blocks %}
                        <li class="def-page__list-item">{{ block.settings.title }}</li>
                    {% endfor %}
                </ul>

            </aside>
            <div class="def-page__content">
                {% for block in section.blocks %}
                    <h2>{{ block.settings.title }}</h2>
                    {{ block.settings.content }}
                {% endfor %}
            </div>
        </div>
    </div> 
</section>

{% schema %}
{
    "name": "Terms Page Content",
    "blocks": [
        {
            "name": "Terms Page Blocks",
            "type": "rp-blocks",
            "settings": [
                {
                    "id": "title",
                    "type": "text",
                    "label": "Title",
                    "default": "Restrictions on Use"
                },
                {
                    "id": "content",
                    "type": "richtext",
                    "label": "Content"
                }
            ]
        }
    ]
}
{% endschema %}