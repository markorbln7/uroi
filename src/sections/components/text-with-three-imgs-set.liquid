                                        </svg>
                                    </div>
                                </div>
                                <div class="gallery__price">
                                    {{ block.settings.product.price | money }}
                                </div>
                                <div class="gallery__cart">
                                    <span>
                                        Add to cart
                                    </span>
                                </div>
                            </div>
                        </a>
                    </div>
                    <a href="{{ block.settings.product.url }}" class="gallery__heading-sub">
                        {% if block.settings.override-name and block.settings.override-name != '' %}
                                {{ block.settings.override-name }}
                            {% else %}
                                {{ block.settings.product.title }}
                        {% endif %}
                    </a>
                    <div class="gallery__desc">
                        {{ block.settings.product-desc }}
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
</section>

{% schema %}
{
    "name": "Text with three Products",
    "settings": [
        {
            "id": "title",
            "type": "text",
            "label": "Title",
            "default": "S-Series"
        },
        {
            "id": "subtitle",
            "type": "text",
            "label": "Subtitle",
            "default": "Designed for sensitive skin. "
        },
        {
            "id": "copy",
            "type": "richtext",
            "label": "Copy"
        }
    ],
    "blocks": [
        {
            "name": "Products",
            "type": "products",
            "settings": [
                {
                    "id": "product",
                    "type": "product",
                    "label": "Product"
                },
                {
                    "id": "override-img",
                    "type": "image_picker",
                    "label": "Override Featured Image"
                },
                {
                    "id": "override-name",
                    "type": "text",
                    "label": "Override Product Name"
                },
                {
                    "id": "product-desc",
                    "type": "text",
                    "label": "Add text under product name"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "General",
            "name": "Text with three Products"
        }
    ]
}
{% endschema %}