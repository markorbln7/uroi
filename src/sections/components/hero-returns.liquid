<section class="hero {% if section.settings.floating-img %}hero--mb{% endif %} hero--returns">
    
    <!-- IMAGE -->
    <div 
    data-scroll 
    data-scroll-direction="vertical" 
    data-scroll-repeat="false"
    class="hero__bg-image hero__bg-image--mob parallax-wrapper should-animate">
        <div class='parallax-element position-absolute w-100 h-100 t-0 l-0'>
            <picture class='position-absolute w-100 h-100 t-0 l-0' data-scroll data-scroll-speed="-1">
                <source media="(max-width: 600px)" srcset="{{ section.settings.img-mob | img_url: 'master'}}">
                <img src="{{ section.settings.img-desk | img_url: 'master'}}" alt="">    
            </picture>
        </div>
    </div>
    <!-- END :: IMAGE -->

    <!-- SMALL IMAGE -->
    {% if section.settings.floating-img %} 
    <div class="hero__floating-img-wrapper">
        <div 
        data-scroll 
        data-scroll-direction="vertical" 
        data-scroll-repeat="false"
        class='should-animate from-y dl-4'>
            <img 
            data-scroll 
            data-scroll-speed="1" 
            class="hero__floating-img" 
            src="{{  section.settings.floating-img | img_url: 'master'}}" 
            alt="{{ section.settings.floating-img-alt }}" />
        </div>
    </div>
    {% endif %}
    <!-- END :: SMALL IMAGE -->

    <!-- CONTENT -->
    <div class="hero__container">
        <div 
        class="hero__content-wrapper hero__content-wrapper--small {% if section.settings.dark-title %}hero__content-wrapper--dark-bottom{% endif %}">
            <h3 
            data-scroll 
            data-scroll-direction="vertical" 
            data-scroll-repeat="false"
            class="hero__subtitle should-animate from-y dl-2">{{ section.settings.subtitle }}</h3>

            <h1 
            data-scroll 
            data-scroll-direction="vertical" 
            data-scroll-repeat="false"
            class="hero__title should-animate from-y dl-3">{{ section.settings.title }} </h1>
        </div>
    </div>
    <!-- END :: CONTENT -->

</section>
{% schema %}
{
    "name": "Hero Page",
    "settings": [
        {
            "id": "img-desk",
            "type": "image_picker",
            "label": "Background Image for Desktop"
        },
        {
            "id": "img-mob",
            "type": "image_picker",
            "label": "Background Image for Mobile"
        },
        {
            "id": "floating-img",
            "type": "image_picker",
            "label": "Floating Image"
        },
        {
            "id": "floating-img-alt",
            "type": "text",
            "label": "Floating Image Alt"
        },
        {
            "id": "title",
            "type": "text",
            "label": "Title",
            "default": "a blessing of water for every skin"
        },
        {
            "id": "subtitle",
            "type": "text",
            "label": "Subtitle",
            "default": "Itâ€™s Made In Japan"
        },   
        {
            "id": "dark-title",
            "type": "checkbox",
            "label": "Move Title to bottom"
        }
    ],
    "presets": [
        {
            "category": "Home Page",
            "name": "Hero Page"
        }
    ]
}
{% endschema %}