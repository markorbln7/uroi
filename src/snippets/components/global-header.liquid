        </ul>
    </div>
</aside>
<div class="header__spacer"></div>

<script>
    const hamburger = document.querySelector('.header__hamburger');
    const header = document.querySelector('.header');
    const drawerToggler = document.querySelector('.open-drawer');
    const drawer = document.querySelector('.menu-drawer');

    function openDrawer() {
        drawer.classList.add('menu-drawer--open');
    }
    
    function closeDrawer(e) {
        if(e.target.classList.contains('menu-drawer')) {
            drawer.classList.remove('menu-drawer--open');
        }
    }

    function toggleHamburger() {
        header.classList.toggle('header--open');
        header.classList.toggle('header--dark');
        document.body.classList.toggle('noscroll')
    }

    drawer.addEventListener('click', closeDrawer)
    drawerToggler.addEventListener('click', openDrawer);
    hamburger.addEventListener('click', toggleHamburger);
</script>